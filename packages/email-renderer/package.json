{
  "name": "@knowingly/email-renderer",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:watch": "vitest",
    "test": "vitest run"
  },
 
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@knowingly/eslint-config": "workspace:*",
    "@knowingly/prettier-config": "workspace:*",
    "@knowingly/tailwind-config": "workspace:*",
    "@knowingly/tsconfig": "workspace:*",
    "@babel/preset-react": "^7.23.3",
    "@tiptap/core": "^2.4.0",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.3.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@react-email/components": "^0.0.11",
    "@react-email/render": "^0.0.9",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "react": "18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
